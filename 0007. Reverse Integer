class Solution:
    def reverse(self, x: int) -> int:
        INT_MAX = 2**31 - 1
        INT_MIN = -2**31

        sign = -1 if x < 0 else 1
        x_str = str(abs(x))           # Convert to string without sign
        rev_str = x_str[::-1]         # Reverse the string
        rev_int = int(rev_str) * sign # Convert back to integer and restore sign

        # Check for overflow
        if rev_int < INT_MIN or rev_int > INT_MAX:
            return 0

        return rev_int
        
