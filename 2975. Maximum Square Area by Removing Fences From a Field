class Solution:
    def maximizeSquareArea(self, m: int, n: int, hFences: List[int], vFences: List[int]) -> int:
        MOD = 10**9 + 7
        
        # Include borders
        hFences = [1] + sorted(hFences) + [m]
        vFences = [1] + sorted(vFences) + [n]
        
        # Compute all horizontal segment lengths
        hDiffs = set()
        for i in range(len(hFences)):
            for j in range(i + 1, len(hFences)):
                hDiffs.add(hFences[j] - hFences[i])
        
        # Compute all vertical segment lengths
        vDiffs = set()
        for i in range(len(vFences)):
            for j in range(i + 1, len(vFences)):
                vDiffs.add(vFences[j] - vFences[i])
        
        # Find largest common distance
        maxSide = max((d for d in hDiffs if d in vDiffs), default=-1)
        if maxSide == -1:
            return -1
        return (maxSide * maxSide) % MOD
