class Solution:
    def removeDuplicates(self, nums):
        n = len(nums)
        if n <= 2:
            return n
        
        k = 2  # first two elements are always allowed
        
        for i in range(2, n):
            if nums[i] != nums[k - 2]:
                nums[k] = nums[i]
                k += 1
        
        return k
