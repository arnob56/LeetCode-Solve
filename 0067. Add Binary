class Solution:
    def addBinary(self, a: str, b: str) -> str:
        i = len(a) - 1
        j = len(b) - 1
        carry = 0
        result = []

        while i >= 0 or j >= 0 or carry:
            total = carry

            if i >= 0:
                if a[i] == '1':
                    total += 1
                i -= 1

            if j >= 0:
                if b[j] == '1':
                    total += 1
                j -= 1

            if total % 2 == 1:
                result.append('1')
            else:
                result.append('0')

            if total >= 2:
                carry = 1
            else:
                carry = 0

        result.reverse()
        return ''.join(result)
